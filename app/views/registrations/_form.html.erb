<%= form_with model: registration, class: "space-y-6" do |form| %>
  <% if registration&.errors&.any? %>
    <div class="bg-red-50 p-4 rounded-lg mb-6">
      <div class="text-sm text-red-700">
        <h3 class="font-medium mb-2">
          <%= pluralize(registration.errors.count, "erro") %> impediram que este registro fosse salvo:
        </h3>
        <ul class="list-disc pl-5">
          <% registration.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Nome Completo", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name,
                        required: true,
                        class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent" %>
  </div>

  <div>
    <%= form.label :email, "E-mail", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.email_field :email,
                         required: true,
                         class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent" %>
  </div>

  <div>
    <%= form.label :phone, "Telefone", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.telephone_field :phone,
                             required: true,
                             id: :phone,
                             placeholder: "(99) 99999-9999",
                             class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent" %>
  </div>

  <div>
    <%= form.label :club, "Clube", class: "block text-sm font-medium text-gray-700 mb-3" %>
    <%= form.text_field :club,
                        required: true,
                        class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent" %>
  </div>
  <div>
  <%= form.label :obs, "Observações?", class: "block text-sm font-medium text-gray-700 mb-3" %>
  <%= form.text_area :obs,
                     required: true,
                     rows: 2,
                     placeholder: "Alguma restrição?, exemplo: 'Tenho restrição alimentar'",
                     class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent" %>
</div>
  <div style="padding-top: 15px">
    <%= form.submit "Confirmar Inscrição",
                  class: "w-full h-12 mt-60 px-6 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-colors cursor-pointer" %>
  </div>
<% end %>