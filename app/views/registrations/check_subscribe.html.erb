<style>
    .search-form {
        display: flex;
        justify-content: center;
        margin-bottom: 1.5rem;
        padding-top: 50px;
    }

    .search-input {
        padding: 0.5rem;
        border: 1px solid #ddd;
        border-radius: 4px;
        width: 250px;
    }

    .search-button {
        padding: 0.5rem 1rem;
        border: none;
        background-color: rgb(37, 99, 235);
        color: white;
        border-radius: 4px;
        margin-left: 0.5rem;
        cursor: pointer;
    }

    .search-button:hover {
        background-color: rgb(29, 78, 216);
    }

    .search-results {
        max-width: 600px;
        margin: 0 auto;
    }

    .result-item {
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }
</style>

<form action="<%= check_subscribe_registrations_path %>" method="get" class="search-form">
  <div class="flex flex-col md:flex-row items-center gap-2 bg-white p-4 shadow-md rounded-lg">
    <label for="search_input" class="text-gray-700 font-semibold mb-1">Email</label>
    <input type="text" id="search_input" name="q" placeholder="Digite o Email..."
           class="w-full md:w-96 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
    <button type="submit"
            class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition font-semibold">
      Pesquisar
    </button>
  </div>
</form>

<% if @registration.present? %>
  <%= render "pages/main_redirect_url", registration: @registration %>
<% elsif @search_attempted %>
  <div class="search-results" style=" display: flex; justify-content: center; background: #B00100;border-radius: 4px; color: white">
    <label class="text-white-700 font-semibold mb-1">Registro nao encontrado!</label>
  </div>
<% end %>
